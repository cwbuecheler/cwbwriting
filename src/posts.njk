<h3>Post Archive</h3>

{% set postslist = collections.posts | sortByDate() %}

<table class="postlist">
  <tbody>
    {% for post in postslist %}
    <tr class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <td class="postlist-date" datetime="{{ post.data.day }}">{{ post.data.day | readableDate }}</td>
      <td><a href="{{ post.url | url }}" class="postlist-link">{% if post.data.headline %}{{ post.data.headline }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>

